{
    "extends": "airbnb",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true,
    },
    "parser": "babel-eslint",
    "plugins": [
        "react",
    ],
    "rules": {
        "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 2 }],
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "max-statements": [0, 10],
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.common.config.js",
            }
        }
    }
}
